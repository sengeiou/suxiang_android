<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".modules.mine.SmartEarnActivity">

    <include layout="@layout/title_public_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_earn_head" />

        <RelativeLayout
            android:id="@+id/rl_user_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_265"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_90">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_earn_user" />

            <RelativeLayout
                android:id="@+id/rl_user_info"
                android:layout_width="@dimen/dimen_180"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_40">

                <com.sx.enjoy.view.CircleImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:src="@mipmap/ic_user_head" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_toRightOf="@+id/iv_user_head"
                    android:maxLines="1"
                    android:text="李先生的步行者"
                    android:textSize="@dimen/text_15"
                    android:textColor="@color/title_main_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_below="@+id/tv_user_name"
                    android:paddingLeft="@dimen/dimen_8"
                    android:paddingRight="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_toRightOf="@id/iv_user_head"
                    android:background="@drawable/bg_yellow_full_12"
                    android:gravity="center"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_12"
                    android:text="一星达人"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dimen_130"
                android:layout_height="@dimen/dimen_130"
                android:layout_below="@+id/rl_user_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_19"
                android:background="@drawable/bg_earn_line_3">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/dimen_3"
                    android:layout_marginStart="@dimen/dimen_1"
                    android:layout_marginBottom="@dimen/dimen_3"/>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_user_share"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-25dp"
            android:src="@mipmap/ic_earn_smart" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_earn_share"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:text="保存到相册"/>

    </RelativeLayout>


</LinearLayout>