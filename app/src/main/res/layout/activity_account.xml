<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".modules.mine.AccountActivity">

    <include layout="@layout/title_public_view"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_user_head"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:layout_height="@dimen/dimen_60"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="头像"/>

                <com.sx.enjoy.view.CircleImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_user_head"/>

                <ImageView
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:src="@mipmap/ic_right_grey"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="用户名称"/>

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:background="@null"
                    android:hint="请输入用户名称"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sex_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="性别"/>

                <TextView
                    android:id="@+id/tv_user_sex"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableRight="@mipmap/ic_right_grey"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"
                    android:hint="请选择"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="请输入邮箱"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信号"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/tv_wx_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="手机号"/>

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableRight="@mipmap/ic_right_grey"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:padding="@dimen/dimen_15">

                <TextView
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15" />

                <EditText
                    android:id="@+id/et_user_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="@null"
                    android:hint="请输入地址"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="登录密码"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableRight="@mipmap/ic_right_grey"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"
                    android:text="******"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_1"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="交易密码"/>

                <TextView
                    android:id="@+id/tv_pay_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableRight="@mipmap/ic_right_grey"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"
                    android:text="******"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_authentication"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="实名认证"/>

                <TextView
                    android:id="@+id/tv_user_auth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableRight="@mipmap/ic_right_grey"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"
                    android:text="未认证"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐码"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15" />

                <EditText
                    android:id="@+id/et_user_recommend"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="请输入推荐码"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/text_15"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_login_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginBottom="@dimen/dimen_8"
                android:gravity="center"
                android:background="@drawable/bg_main_full_2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16"
                android:text="退出登录"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>