<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".modules.mine.PayPasswordActivity">

    <include layout="@layout/title_public_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:paddingLeft="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_13"
        android:textColor="@color/color_3A3A3A"
        android:text="请输入你的交易密码，以验证身份"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/dimen_120"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="交易密码"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:hint="首次设置交易密码，可不填"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:paddingLeft="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_13"
        android:textColor="@color/color_3A3A3A"
        android:text="请输入你的新密码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/dimen_120"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="输入新密码"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:hint="请输入新密码"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/dimen_120"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="再次输入新密码"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:hint="请再次输入新密码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@drawable/bg_main_full_2"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:text="保存"/>

</LinearLayout>