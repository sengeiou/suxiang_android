<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".modules.market.MarkDetailActivity">

    <include layout="@layout/title_public_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15">

                        <com.sx.enjoy.view.CircleImageView
                            android:id="@+id/iv_user_head"
                            android:layout_width="@dimen/dimen_60"
                            android:layout_height="@dimen/dimen_60"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_user_head"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/dimen_10">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/title_main_color"
                                android:textSize="@dimen/text_15"
                                android:text=""/>

                            <TextView
                                android:id="@+id/tv_market_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/title_second_color"
                                android:textSize="@dimen/text_13"
                                android:text=""/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_13"
                            android:text="价格"/>

                        <TextView
                            android:id="@+id/tv_market_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_16"
                            android:text=""/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_13"
                            android:text="数量"/>

                        <TextView
                            android:id="@+id/tv_market_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_13"
                            android:text=""/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_13"
                            android:text="总价"/>

                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/text_16"
                            android:text=""/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:id="@+id/ll_pay_method"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:visibility="gone"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_13"
                            android:text="支付方式"/>

                        <ImageView
                            android:id="@+id/iv_zfb_pay"
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25"
                            android:visibility="gone"
                            android:src="@mipmap/ic_market_zfb"/>

                        <ImageView
                            android:id="@+id/iv_wx_pay"
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:visibility="gone"
                            android:src="@mipmap/ic_market_wx"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/v_ali_line"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="@dimen/dimen_10"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:id="@+id/ll_ali_number"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25"
                            android:src="@mipmap/ic_market_zfb"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:textSize="@dimen/text_13"
                            android:text="支付宝账号"/>

                        <TextView
                            android:id="@+id/tv_zfb_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_13"
                            android:text=""/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:id="@+id/ll_ali_code"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25"
                            android:src="@mipmap/ic_market_zfb"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:textSize="@dimen/text_13"
                            android:text="支付宝收款码"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_5"
                            android:drawableRight="@mipmap/ic_right_grey"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_13"
                            android:text="点击查看"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/v_wx_line"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_10"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:id="@+id/ll_wx_code"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25"
                            android:src="@mipmap/ic_market_wx"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:textSize="@dimen/text_13"
                            android:text="微信收款码"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_5"
                            android:drawableRight="@mipmap/ic_right_grey"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/text_13"
                            android:text="点击查看"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/dimen_40"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_15"
                android:background="@drawable/bg_main_full_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15"
                android:text="买入"/>

        </LinearLayout>

        <include
            layout="@layout/empty_public_network"
            android:visibility="gone"
            android:id="@+id/em_network_view"/>

    </RelativeLayout>

</LinearLayout>