<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".modules.mine.PhoneChangeActivity">

    <include layout="@layout/title_public_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_15"
        android:textSize="@dimen/text_15"
        android:textColor="@color/color_3A3A3A"
        android:text="原手机号"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:text="+86"/>

        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_25"
            android:background="@color/color_666666"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_15"
            android:text="18715059965"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:layout_marginTop="@dimen/dimen_1"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:text="验证码"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/text_15"
            android:textColor="@color/color_666666" />

        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_25"
            android:background="@color/color_666666"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_15"/>

        <TextView
            android:id="@+id/tv_old_code"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_15"
            android:text="发送验证码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_15"
        android:textSize="@dimen/text_15"
        android:textColor="@color/color_3A3A3A"
        android:text="新手机号"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:text="+86"/>

        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_25"
            android:background="@color/color_666666"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:inputType="phone"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_15"
            android:hint="请输入新手机号"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:layout_marginTop="@dimen/dimen_1"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:text="验证码"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/text_15"
            android:textColor="@color/color_666666" />

        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_25"
            android:background="@color/color_666666"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_15"/>

        <TextView
            android:id="@+id/tv_new_code"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_15"
            android:text="发送验证码"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@drawable/bg_main_full_2"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:text="保存"/>

</LinearLayout>