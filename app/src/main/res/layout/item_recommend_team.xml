<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15">
        
        <com.sx.enjoy.view.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:src="@mipmap/ic_user_head"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_main_color"
                    android:textSize="@dimen/text_15"
                    android:text="第七班"/>

                <TextView
                    android:id="@+id/tv_member_name"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_16"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:gravity="center"
                    android:background="@drawable/bg_red_full_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12"
                    android:text="1级"/>

                <TextView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_16"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:background="@drawable/bg_green_full_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12"
                    android:text="直推"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_contribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FA4611"
                    android:textSize="@dimen/text_13"
                    android:text="贡献度 333"/>

                <TextView
                    android:id="@+id/tv_user_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_25"
                    android:textColor="@color/color_7354F8"
                    android:textSize="@dimen/text_13"
                    android:text="活跃度 333"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@color/background"/>

</LinearLayout>
