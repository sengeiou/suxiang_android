<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_full_5"
        android:orientation="vertical">

        <com.sx.enjoy.view.ControlsRatio
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sx.enjoy.view.RoundImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_title_logo"
                android:scaleType="centerCrop"/>

        </com.sx.enjoy.view.ControlsRatio>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="哈哈哈哈哈哈"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_F02134"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:textSize="@dimen/text_13"
                    android:text="¥"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_F02134"
                    android:textSize="@dimen/text_16"
                    android:text="333.33"/>

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_15"
                android:src="@mipmap/ic_shop_cart"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
