<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/title_public_view"/>

    <ImageView
        android:id="@+id/iv_pay_result"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_70"
        android:layout_marginTop="@dimen/dimen_60"
        android:src="@mipmap/ic_notice_success"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_22"
        android:text="支付成功"/>

    <TextView
        android:id="@+id/tv_result_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_13"
        android:text="订单支付成功，看看其他的吧"/>

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dimen_43"
        android:layout_marginTop="@dimen/dimen_25"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginRight="@dimen/dimen_60"
        android:gravity="center"
        android:background="@drawable/bg_main_full_5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:text="返回首页"/>

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginRight="@dimen/dimen_60"
        android:gravity="center"
        android:background="@drawable/bg_main_line_5"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_16"
        android:text="查看订单"/>

</LinearLayout>