<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/ll_market_header"
    android:padding="@dimen/dimen_15"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lc_market_quotations"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200"
        android:background="@color/color_F1FFF0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8">
        
        <TextView
            android:id="@+id/tv_sell_out"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@mipmap/bg_sell_out"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"
            android:text="发布卖出"/>

        <TextView
            android:id="@+id/tv_buy_in"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_15"
            android:background="@mipmap/bg_buy_in"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"
            android:text="发布买入"/>

    </LinearLayout>

</LinearLayout>
