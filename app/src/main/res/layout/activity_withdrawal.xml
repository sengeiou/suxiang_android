<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".modules.mine.WithdrawalActivity">

    <include layout="@layout/title_public_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_1"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="提现金额"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:hint="请输入提现金额"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_1"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="提现卡号"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:hint="请输入提现卡号"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_1"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/dimen_100"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="持卡人姓名"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:hint="请输入真实姓名"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_10"
        android:textColor="@color/main_color"
        android:textSize="@dimen/text_13"
        android:text="本次提现最大金额：¥0.00"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@drawable/bg_main_full_2"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:text="确认提现"/>

</LinearLayout>