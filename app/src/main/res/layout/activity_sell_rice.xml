<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".modules.market.SellRiceActivity">

    <include layout="@layout/title_public_view"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_1"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/dimen_120"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:textColor="@color/title_main_color"
            android:text="支付宝账号"/>

        <EditText
            android:id="@+id/et_ali_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/color_3A3A3A"
            android:textSize="@dimen/text_15"
            android:hint="请输入支付宝账号"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rice_fee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:layout_marginTop="@dimen/dimen_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_rice_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_15"
            android:text="*交易手续费"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sell_rice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="@drawable/bg_main_full_2"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:text="立即卖出"/>

</LinearLayout>