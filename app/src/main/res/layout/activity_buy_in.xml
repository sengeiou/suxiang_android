<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".modules.market.BuyInActivity">

    <include layout="@layout/title_public_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_1"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/dimen_90"
                android:layout_height="wrap_content"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_15"
                android:text="买入数量"/>

            <EditText
                android:id="@+id/et_rice_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_15"
                android:hint="请输入买入数量"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:background="@color/background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/dimen_90"
                android:layout_height="wrap_content"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_15"
                android:text="确认价格"/>

            <EditText
                android:id="@+id/et_rice_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_15"
                android:hint="请输入买入价格"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_30"
        android:gravity="center"
        android:background="@drawable/bg_main_full_5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:text="发布"/>

</LinearLayout>