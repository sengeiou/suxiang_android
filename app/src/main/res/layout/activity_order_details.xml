<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants"
    tools:context=".modules.mine.OrderDetailsActivity">

    <include layout="@layout/title_public_view"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_90"
                android:background="@drawable/bg_main_full_change"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_order_time"
                    android:drawablePadding="@dimen/dimen_8"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"
                    android:text="等待付款"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/dimen_6"
                        android:layout_height="@dimen/dimen_6"
                        android:background="@drawable/bg_white_full_3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_13"
                        android:text="付款金额： ¥"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_13"
                        android:text="3333.33"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_15"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_address_circle"/>

                <LinearLayout
                    android:id="@+id/ll_address_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_16"
                            android:text="佐助"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:textColor="@color/title_main_color"
                            android:textSize="@dimen/text_15"
                            android:text="18715059965"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:textColor="@color/color_1A1A1A"
                        android:textSize="@dimen/text_15"
                        android:text="收货地址：江苏省徐州市泉山区西三环路木叶村"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_right_grey"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:background="@mipmap/ic_order_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_order_shop"
                    android:drawablePadding="@dimen/dimen_8"
                    android:textSize="@dimen/text_15"
                    android:textColor="@color/title_main_color"
                    android:text="产品详情"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30"
                    android:background="@drawable/bg_main_line_15"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:gravity="center"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_14"
                    android:text="联系商家"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/white"
                android:padding="@dimen/dimen_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/title_main_color"
                    android:text="订单号：123456789"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/title_main_color"
                    android:text="下单时间：2020-08-10 08:38:22"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcy_commodity_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dimen_100"
                android:background="@color/white"
                android:padding="@dimen/dimen_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_15"
                    android:textColor="@color/title_main_color"
                    android:text="留言"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@null"
                    android:textSize="@dimen/text_15"
                    android:textColor="@color/color_1A1A1A"
                    android:hint="选填 请先和商家协商一致"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/text_15"
            android:text="应付款："/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:textColor="@color/color_F02134"
            android:textSize="@dimen/text_15"
            android:text="¥333.33"/>

        <TextView
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_30"
            android:gravity="center"
            android:background="@drawable/bg_grey_line_1"
            android:textSize="@dimen/text_15"
            android:textColor="@color/color_3A3A3A"
            android:text="取消订单"/>

        <TextView
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_15"
            android:background="@drawable/bg_main_full_1"
            android:gravity="center"
            android:textSize="@dimen/text_15"
            android:textColor="@color/white"
            android:text="取消订单"/>

    </LinearLayout>

</LinearLayout>