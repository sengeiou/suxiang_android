<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/bg_white_full_18">

    <RelativeLayout
        android:id="@+id/rl_walk"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_898989"
            android:textSize="@dimen/text_13"
            android:text="步行"/>

        <View
            android:id="@+id/v_walk"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginBottom="@dimen/dimen_3"
            android:background="@color/main_color"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
        
    </RelativeLayout>

    <View
        android:layout_width="@dimen/dimen_1"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/color_898989"/>

    <RelativeLayout
        android:id="@+id/rl_car"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_898989"
            android:textSize="@dimen/text_13"
            android:text="车行"/>

        <View
            android:id="@+id/v_car"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginBottom="@dimen/dimen_3"
            android:background="@color/main_color"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>
