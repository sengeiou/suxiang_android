<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_3">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bottom_home" />

            <TextView
                android:id="@+id/tv_home"
                style="@style/HomeBottomTextThem"
                android:text="首页" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_task"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bottom_task" />

            <TextView
                android:id="@+id/tv_task"
                style="@style/HomeBottomTextThem"
                android:text="任务" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_market"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_market"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bottom_market" />

            <TextView
                android:id="@+id/tv_market"
                style="@style/HomeBottomTextThem"
                android:text="市场" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_shop"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bottom_store" />

            <TextView
                android:id="@+id/tv_shop"
                style="@style/HomeBottomTextThem"
                android:text="商城" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/bottom_mine" />

            <TextView
                android:id="@+id/tv_mine"
                style="@style/HomeBottomTextThem"
                android:text="我的" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>