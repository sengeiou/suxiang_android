<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_140">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_team_head_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_140"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_team_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_693C18"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_3"
                android:textColor="@color/color_693C18"
                android:textSize="@dimen/text_15"
                android:text="团队总人数"/>

            <TextView
                android:id="@+id/tv_team_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/ic_team_question"
                android:textColor="@color/color_693C18"
                android:textSize="@dimen/text_13"
                android:text="有效0人"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="@dimen/dimen_50"
            android:background="@color/color_693C18"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_next_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_693C18"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:text="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_3"
                android:textColor="@color/color_693C18"
                android:textSize="@dimen/text_15"
                android:text="直推总人数"/>

            <TextView
                android:id="@+id/tv_next_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_693C18"
                android:textSize="@dimen/text_13"
                android:text="有效0人"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>