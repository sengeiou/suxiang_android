<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_market_filtrate"
    android:background="@color/white">

    <RelativeLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_market_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/title_main_color"
                    android:text="市场"/>

                <TextView
                    android:id="@+id/tv_market_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:text="收入明细"
                    android:textColor="@color/title_second_color"
                    android:textSize="@dimen/text_13" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tb_market_title"
            app:srlPrimaryColor="@color/background"
            app:srlAccentColor="@color/color_3A3A3A"
            app:srlEnablePreviewInEditMode="true">

            <com.scwang.smart.refresh.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/color_3A3A3A"/>

            <com.sx.enjoy.view.MyScrollView
                android:id="@+id/nsv_market_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ll_market_header">

                        <LinearLayout
                            android:id="@+id/ll_market_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_white_full_7"
                            android:layout_margin="@dimen/dimen_10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_40"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@mipmap/ic_market_quotations"
                                    android:drawablePadding="@dimen/dimen_5"
                                    android:layout_marginLeft="@dimen/dimen_15"
                                    android:text="市场行情"
                                    android:textColor="@color/title_main_color"
                                    android:textSize="@dimen/text_13" />

                                <TextView
                                    android:id="@+id/tv_transaction_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_15"
                                    android:drawableRight="@mipmap/ic_right_grey"
                                    android:drawablePadding="@dimen/dimen_5"
                                    android:text="交易流程"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1"
                                android:layout_marginLeft="@dimen/dimen_15"
                                android:layout_marginRight="@dimen/dimen_15"
                                android:background="@color/background"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:id="@+id/tv_demand_sum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_15"
                                        android:textColor="@color/main_color"
                                        android:text="0"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_10"
                                        android:textColor="@color/color_FF3B2D"
                                        android:text=""/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_13"
                                        android:textColor="@color/main_color"
                                        android:text="需求总量"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:id="@+id/tv_transaction_sum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_15"
                                        android:textColor="@color/color_089930"
                                        android:text="0"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_10"
                                        android:textColor="@color/color_FF3B2D"
                                        android:text=""/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_13"
                                        android:textColor="@color/color_089930"
                                        android:text="昨日交易总量"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="@dimen/dimen_5"
                                    android:paddingRight="@dimen/dimen_5"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_us_number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/text_15"
                                            android:textColor="@color/title_main_color"
                                            android:text="0.0USDT"/>

                                        <TextView
                                            android:id="@+id/tv_zg_number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/text_10"
                                            android:textColor="@color/color_FF3B2D"
                                            android:text="≈4.5ZGCT"/>

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_13"
                                        android:textColor="@color/title_main_color"
                                        android:text="当前指导价格"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_9"
                                        android:textColor="@color/color_FF3B2D"
                                        android:text="注:交易米粒价格浮动不得超过当前指导价格约40%"/>

                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dimen_10"
                                    android:textSize="@dimen/text_13"
                                    android:textColor="@color/color_666666"
                                    android:text="ZGCT"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true">

                                    <TextView
                                        android:id="@+id/tv_cart_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_blue_full_15"
                                        android:paddingTop="@dimen/dimen_2"
                                        android:paddingBottom="@dimen/dimen_2"
                                        android:paddingLeft="@dimen/dimen_5"
                                        android:paddingRight="@dimen/dimen_5"
                                        android:textColor="@color/color_3A7CA3"
                                        android:textSize="@dimen/text_12"
                                        android:text="近7天"/>

                                    <TextView
                                        android:id="@+id/tv_cart_week"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dimen_15"
                                        android:paddingTop="@dimen/dimen_2"
                                        android:paddingBottom="@dimen/dimen_2"
                                        android:paddingLeft="@dimen/dimen_5"
                                        android:paddingRight="@dimen/dimen_5"
                                        android:textColor="@color/color_666666"
                                        android:textSize="@dimen/text_12"
                                        android:text="近7周"/>

                                </LinearLayout>


                            </RelativeLayout>

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/lc_market_quotations"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:layout_marginRight="@dimen/dimen_5"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_200"
                                android:background="@color/white"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_marginRight="@dimen/dimen_10"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:layout_marginTop="@dimen/dimen_8">

                                <TextView
                                    android:id="@+id/tv_sell_out"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dimen_40"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:background="@mipmap/bg_sell_out"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_15"
                                    android:text="发布卖出"/>

                                <TextView
                                    android:id="@+id/tv_buy_in"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dimen_40"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_15"
                                    android:background="@mipmap/bg_buy_in"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_15"
                                    android:text="发布买入"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_menu_top_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15">

                        <LinearLayout
                            android:id="@+id/ll_menu_select_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_select_name_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/title_main_color"
                                android:textSize="@dimen/text_13"
                                android:text="全部交易"/>

                            <ImageView
                                android:id="@+id/iv_market_arrow_1"
                                android:layout_width="@dimen/dimen_12"
                                android:layout_height="@dimen/dimen_12"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:src="@mipmap/ic_market_down"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_search_1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dimen_30"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_weight="1"
                            android:background="@drawable/bg_grey_full_15"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:layout_marginLeft="@dimen/dimen_15"
                                android:src="@mipmap/ic_search_grey" />

                            <TextView
                                android:id="@+id/et_commodity_search_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_15"
                                android:layout_marginRight="@dimen/dimen_15"
                                android:hint="请输入您要搜索的手机号"
                                android:singleLine="true"
                                android:textColor="@color/title_main_color"
                                android:textSize="@dimen/text_13" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_market_search_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_15"
                            android:textSize="@dimen/text_13"
                            android:textColor="@color/main_color"
                            android:text="搜索"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/background"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_13"
                            android:textColor="@color/title_main_color"
                            android:text="数量:"/>

                        <TextView
                            android:id="@+id/tv_count_1_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="@dimen/text_13"
                            android:textColor="@color/title_main_color"
                            android:text=""/>

                        <TextView
                            android:id="@+id/tv_count_1_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="@dimen/text_13"
                            android:textColor="@color/title_main_color"
                            android:text=""/>

                        <TextView
                            android:id="@+id/tv_count_1_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="@dimen/text_13"
                            android:textColor="@color/title_main_color"
                            android:text=""/>

                        <View
                            android:layout_width="@dimen/dimen_1"
                            android:layout_height="@dimen/dimen_20"
                            android:background="@color/background"/>

                        <LinearLayout
                            android:id="@+id/ll_filtrate_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@mipmap/ic_select_limit"
                                android:drawablePadding="@dimen/dimen_5"
                                android:textSize="@dimen/text_13"
                                android:textColor="@color/title_main_color"
                                android:text="筛选"/>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_market_list"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </com.sx.enjoy.view.MyScrollView>

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <LinearLayout
            android:id="@+id/ll_select_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/tb_market_title"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_menu_top_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <LinearLayout
                    android:id="@+id/ll_menu_select_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_select_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_main_color"
                        android:textSize="@dimen/text_13"
                        android:text="全部交易"/>

                    <ImageView
                        android:id="@+id/iv_market_arrow_2"
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_12"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:src="@mipmap/ic_market_down"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dimen_30"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/bg_grey_full_15">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:src="@mipmap/ic_search_grey"/>

                    <com.sx.enjoy.view.ClearEditText
                        android:id="@+id/et_commodity_search_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginRight="@dimen/dimen_15"
                        android:inputType="number"
                        android:background="@null"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"
                        android:textSize="@dimen/text_13"
                        android:textColor="@color/title_main_color"
                        android:hint="请输入您要搜索的手机号"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_market_search_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/main_color"
                    android:text="搜索"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/title_main_color"
                    android:text="数量:"/>

                <TextView
                    android:id="@+id/tv_count_2_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/title_main_color"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_count_2_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/title_main_color"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_count_2_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/title_main_color"
                    android:text=""/>

                <View
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@color/background"/>

                <LinearLayout
                    android:id="@+id/ll_filtrate_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_select_limit"
                        android:drawablePadding="@dimen/dimen_5"
                        android:textSize="@dimen/text_13"
                        android:textColor="@color/title_main_color"
                        android:text="筛选"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_select_right"
        android:layout_width="@dimen/dimen_280"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_25"
            android:background="@color/background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@color/background"
            android:paddingLeft="@dimen/dimen_12"
            android:gravity="center_vertical"
            android:textColor="@color/title_main_color"
            android:textSize="@dimen/text_15"
            android:text="筛选"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_12"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_13"
            android:textColor="@color/title_main_color"
            android:text="数量"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_count_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="6"
                android:background="@drawable/bg_grey_full_15"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_13"
                android:hint="最低数"/>

            <View
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:background="@color/background"/>

            <EditText
                android:id="@+id/et_count_max"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="6"
                android:background="@drawable/bg_grey_full_15"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_13"
                android:hint="最高数"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/background"
            android:layout_marginTop="@dimen/dimen_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_12"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_13"
            android:textColor="@color/title_main_color"
            android:text="价格区间(ZGCT单价)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_price_min"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="6"
                android:inputType="number"
                android:background="@drawable/bg_grey_full_15"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_13"
                android:hint="最低价"/>

            <View
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_1"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:background="@color/background"/>

            <EditText
                android:id="@+id/et_price_max"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="6"
                android:inputType="number"
                android:background="@drawable/bg_grey_full_15"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_13"
                android:hint="最高价"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/background"
            android:layout_marginTop="@dimen/dimen_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_12"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_13"
            android:textColor="@color/title_main_color"
            android:text="支付方式"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">

            <TextView
                android:id="@+id/tv_pay_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_main_full_15"
                android:textSize="@dimen/text_13"
                android:textColor="@color/white"
                android:text="不限"/>

            <TextView
                android:id="@+id/tv_pay_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_grey_full_15"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:textSize="@dimen/text_13"
                android:textColor="@color/color_666666"
                android:text="支付宝"/>

            <TextView
                android:id="@+id/tv_pay_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_30"
                android:layout_weight="1"
                android:background="@drawable/bg_grey_full_15"
                android:gravity="center"
                android:textSize="@dimen/text_13"
                android:textColor="@color/color_666666"
                android:text="微信"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:background="@color/background"
            android:layout_marginTop="@dimen/dimen_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_reset_select"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_40"
                android:gravity="center"
                android:background="@drawable/bg_grey_left_full_20"
                android:textColor="@color/title_main_color"
                android:textSize="@dimen/text_15"
                android:text="重置"/>

            <TextView
                android:id="@+id/tv_save_select"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_40"
                android:gravity="center"
                android:background="@drawable/bg_main_right_full_20"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15"
                android:text="确定"/>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

