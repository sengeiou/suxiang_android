<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FEFFAB"
        android:textSize="@dimen/text_18"
        android:text="恭喜你,签到成功"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_answer_right"/>

    <LinearLayout
        android:id="@+id/ll_back_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47"
        android:gravity="center"
        android:background="@mipmap/bg_sure_button">

        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回首页"
            android:textColor="@color/color_9C1400"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_30"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:text="下一题"/>

</LinearLayout>
