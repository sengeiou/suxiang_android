<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sx.enjoy">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <uses-feature android:name="android.hardware.sensor.stepcounter" />
    <uses-feature android:name="feature:android.hardware.sensor.stepdetector" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:maxAspectRatio="2.4"
        android:networkSecurityConfig="@xml/network_security_config"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" /> <!-- 适配华为（huawei）刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" /> <!-- 适配小米（xiaomi）刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modules.market.IncomeActivity" />
        <activity android:name=".modules.login.LoginActivity" />
        <activity android:name=".modules.market.BuyInActivity" />
        <activity android:name=".modules.login.PasswordForgetActivity" />
        <activity android:name=".modules.login.RegisterActivity" />
        <activity android:name=".modules.mine.AccountActivity" />
        <activity android:name=".modules.market.MarkDetailActivity" />
        <activity android:name=".modules.market.SellOutActivity" />
        <activity android:name=".modules.mine.TransactionDetailsActivity"/>
        <activity android:name=".modules.market.SellRiceActivity" />
        <activity android:name=".modules.mine.TransactionActivity" />
        <activity android:name=".modules.mine.OrderDetailsActivity" />
        <activity android:name=".modules.mine.OrderListActivity" />
        <activity android:name=".modules.store.OrderPayActivity" />
        <activity android:name=".modules.store.AddressEditActivity" />
        <activity android:name=".modules.store.OrderConfirmActivity" />
        <activity android:name=".modules.store.ShopCartActivity" />
        <activity android:name=".modules.store.CommodityActivity" />
        <activity android:name=".modules.store.CommodityListActivity" />
        <activity android:name=".modules.home.SignAnswerActivity" />
        <activity android:name=".modules.home.WalkHistoryActivity" />
        <activity android:name=".modules.mine.MyTaskActivity" />
        <activity android:name=".modules.mine.RecommendTeamActivity" />
        <activity android:name=".modules.mine.LubricateActivity" />
        <activity android:name=".modules.mine.SmartEarnActivity" />
        <activity android:name=".modules.mine.FinanceActivity" />
        <activity android:name=".modules.mine.RiceRecordActivity" />
        <activity android:name=".modules.mine.BalanceRecordActivity" />
        <activity android:name=".modules.mine.WithdrawalActivity" />
        <activity android:name=".modules.mine.BalanceActivity" />
        <activity android:name=".modules.mine.MemberUpActivity" />
        <activity android:name=".modules.mine.PhoneChangeActivity" />
        <activity android:name=".modules.mine.FeedbackActivity" />
        <activity android:name=".modules.mine.AuthenticationActivity" />
        <activity android:name=".modules.mine.PayPasswordActivity" />
        <activity android:name=".modules.mine.LoginPasswordActivity" />

        <service
            android:name=".service.StepCalculationService"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>